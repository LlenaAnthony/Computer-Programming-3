import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.PrintWriter;
import net.ServerSocket;
import java.net.Socket;

public class SampleServer1{
    public static void main (String[] args){
        int port = 2000;
        try (
            ServerSocket ServerSocket = new ServerSocket (port);
            Socket clientSocket = ServerSocket.accept();
            BufferedReader steramRdr = new BufferedReader (
                new InputStreamReader (clientSocket.getInputStream());
            PrintWriter streamWtr = new PrintWriter(
                clientSocket.getOutputStrea,(), true);
            ) {
                //server sends message to clientSocket
                streamWtr.println("What is your name? ")

                //server accepts input from client
                String name = steramRdr.readLine();
                int age;
                while (true){
                    streamWtr.println("What is your age? ");
                    try{
                        age = Integer.parseInt(steramRdr.readLine());
                    }
                }
            }


            )
        )



    }
}
